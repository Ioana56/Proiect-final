@using Blog_Remastered.Models
@model Post

@{

}

<div class="col-md-9 col-md-offset-3">
<div class="posts">
<div class="row">
        <section>
            <form id="post" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" aria-required="true" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <label asp-for="Body" class="form-label"></label>
                    <textarea asp-for="Body" class="form-control" aria-required="true"></textarea>
                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>
                <div>
                        @if(Model.Id == 0)
                            {
                                <button id="createEditPost" type="submit" class="w-100 btn btn-lg btn-primary"> Create post </button>
                            } else
                            {
                                <button id="createEditPost" type="submit" class="w-100 btn btn-lg btn-primary"> Edit post </button>
                            }
                </div>
            </form>
            </section>
            </div>
            </div>
            </div>


@section scripts {}